document.addEventListener('DOMContentLoaded', () => {
    /* --- CARROSSEL + REFLEXO --- */
    const wrapper = document.getElementById('carouselWrapper');
    const images = document.querySelectorAll('.carousel-image');
    const reflection = document.getElementById('carouselReflection');
    let currentIndex = 0;
    const totalImages = images.length;
    const intervalTime = 3500;

    function updateReflection() {
        if (images.length > 0) {
            const currentImageSrc = images[currentIndex].src;
            if (reflection) reflection.style.backgroundImage = `url('${currentImageSrc}')`;
        }
    }
    updateReflection();

    function nextSlide() {
        currentIndex++;
        if (currentIndex >= totalImages) {
            currentIndex = 0;
        }
        if (wrapper) {
            wrapper.style.transform = `translateX(-${currentIndex * 100}vw)`;
            updateReflection();
        }
    }
    if (totalImages > 0) {
        setInterval(nextSlide, intervalTime);
    }

    /* --- SCROLL SUAVE --- */
    document.querySelectorAll('a[href^="#"]').forEach(anchor => {
        anchor.addEventListener('click', function (e) {
            e.preventDefault();
            const targetId = this.getAttribute('href');
            const targetElement = document.querySelector(targetId);
            if (targetElement) {
                const headerOffset = 100;
                const elementPosition = targetElement.getBoundingClientRect().top;
                const offsetPosition = elementPosition + window.pageYOffset - headerOffset;
                window.scrollTo({ top: offsetPosition, behavior: "smooth" });
            }
        });
    });

    /* --- TOGGLE (Visual Click) --- */
    const userBtn = document.getElementById('btn-user');
    const specialistBtn = document.getElementById('btn-specialist');

    function toggleProfile(type) {
        if (type === 'user') {
            userBtn.classList.add('active');
            if (specialistBtn) specialistBtn.classList.remove('active');
        } else {
            if (specialistBtn) specialistBtn.classList.add('active');
            userBtn.classList.remove('active');
        }
    }

    if (userBtn) userBtn.addEventListener('click', () => toggleProfile('user'));
    if (specialistBtn) specialistBtn.addEventListener('click', () => toggleProfile('specialist'));
});